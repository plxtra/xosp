{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Verbose",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning",
				"Quartz": "Information",
				"OpenIddict": "Warning"
			}
		}
	},
	"AllowedHosts": "*",
	"Kestrel": {
		"EndPoints": {
			"Http": {
				"Url": "http://0.0.0.0:80"
			},
			"Https": {
				"Url": "https://0.0.0.0:${PublicHttpsPort}",
				"Certificate": {
					"Path":"/run/secrets/certificate.crt",
					"KeyFile":"/run/secrets/certificate.key"
				}
			}
		}
	},
	"Identity": {
		"Password": {
			"RequireNonAlphanumeric": false,
			"RequireDigit": false,
			"RequireUppercase": false,
			"RequireLowercase": false,
			"RequiredLength": 4
		}
	},
	"BasicAuth":{
		"UserName":"${AdminUser}",
		"Password":"${AdminPassword}",
		"Scope":"AuthServer${AuthSuffix}/System"
	}
}
