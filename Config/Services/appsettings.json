{
  "Serilog": {
    "MinimumLevel": {
		"Default": "Verbose",
		"Override": {
			"Microsoft": "Warning",
			"System": "Warning",
      "Npgsql": "Warning"
		}
	}
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      }
    }
  },
  "ConnectionStrings": {
    "MotifSettingsDB": "Server=${DbServer};Database=${DbName-Motif};User Id=${DbUser-Motif};Password=${DbPassword-Motif}"
  },
  "TokenAuthority": {
    "TokenServiceUrl": "https://auth.${HttpsUri}/",
    "Audience": "Motif${AuthSuffix}-API"
  },
  "CORS": {
    "Origins": ["https://*.${HttpsUri}/","http://localhost:4200"]
  }
}
